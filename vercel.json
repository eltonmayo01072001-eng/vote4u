{
  "version": 2,
  "builds": [
    {
      "src": "voting-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)", "headers": { "cache-control": "max-age=0" }, "dest": "voting-frontend/index.html" }
  ]
}
