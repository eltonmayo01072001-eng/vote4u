{
  "version": 2,
  "builds": [
    {
      "src": "voting-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/fallback.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },          
    { "src": "/(.*\\.(js|css|png|svg|ico))", "dest": "/voting-frontend/$1" }, 
    { "src": "/(.*)", "dest": "/api/fallback.js" }      
  ]
}
